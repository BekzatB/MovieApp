<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00203f">

    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="cinema name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cinema_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="cinema address"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cinema_name"
        app:layout_constraintStart_toStartOf="@+id/cinema_name"
        app:layout_constraintTop_toBottomOf="@+id/cinema_name" />

    <TextView
        android:id="@+id/cinema_parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cinema_address"
        app:layout_constraintStart_toStartOf="@+id/cinema_address"
        app:layout_constraintTop_toBottomOf="@+id/cinema_address" />

    <TextView
        android:id="@+id/cinema_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cinema_parking"
        app:layout_constraintStart_toStartOf="@+id/cinema_parking"
        app:layout_constraintTop_toBottomOf="@+id/cinema_parking" />

    <TextView
        android:id="@+id/cinema_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cinema_entry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cinema_entry"
        app:layout_constraintTop_toBottomOf="@+id/cinema_entry" />

    <TextView
        android:id="@+id/cinema_buffet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cinema_phone"
        app:layout_constraintStart_toStartOf="@+id/cinema_phone"
        app:layout_constraintTop_toBottomOf="@+id/cinema_phone" />

    <TextView
        android:id="@+id/cinema_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cinema_buffet"
        app:layout_constraintStart_toStartOf="@+id/cinema_buffet"
        app:layout_constraintTop_toBottomOf="@+id/cinema_buffet" />
</androidx.constraintlayout.widget.ConstraintLayout>