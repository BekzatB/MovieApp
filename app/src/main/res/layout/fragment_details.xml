<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00203f"
        tools:context=".ui.details.FragmentDetails">

        <ImageView
            android:id="@+id/movieImageView"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_below="@id/movieImageView"
            android:layout_centerHorizontal="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp" />
        <TextView
            android:id="@+id/movieDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:textColor="@android:color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="15dp" />


        <CheckBox
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_below="@id/movieDescription"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="100dp"
            android:checked="false"
            android:button="@null"
            />
        <TextView
            android:id="@+id/text_view_rating"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Ratings and reviews"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_below="@id/imageButton"
            android:layout_marginStart="15dp">
        </TextView>
        <LinearLayout
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_below="@id/text_view_rating">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_marginStart="15dp" />
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_marginStart="70dp" />
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_marginStart="70dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/minus">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kino.kz"
                android:textSize="14sp"
                android:textColor="#ffbc40"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMDB"
                android:textSize="14sp"
                android:textColor="#00cdff"
                android:layout_marginLeft="67dp"
                android:layout_marginStart="67dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KinoPoisk"
                android:textSize="14sp"
                android:textColor="#ffa500"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp" />
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_below="@id/sites"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="25dp"
            android:background="#FFF" />
        <TextView
            android:id="@+id/rating"
            android:layout_below="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <View
            android:id="@+id/view2"
            android:layout_below="@id/rating"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="40dp"
            android:background="#FFF" />
        <Button
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_below="@id/view2"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:text="Notify about movie release"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button"
            android:layout_marginStart="38dp" />
    </RelativeLayout>
</ScrollView>